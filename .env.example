# Whisper-Assistant Environment Configuration
# Copy to .env and fill in your values

# Required: Vexa API credentials
VEXA_API_KEY=your-vexa-api-key-here
VEXA_MEETING_ID=your-meeting-code-here

# Optional: Meeting platform (google_meet, zoom, teams)
VEXA_PLATFORM=google_meet

# Optional: Bot display name in meeting
VEXA_BOT_NAME=WhisperAssistant

# Optional: Custom Vexa API URL (defaults to https://api.cloud.vexa.ai)
# VEXA_API_URL=https://api.cloud.vexa.ai

# Optional: Qdrant connection settings
# QDRANT_HOST=localhost
# QDRANT_PORT=6333

# Optional: Polling interval in seconds (default: 2.0)
POLL_INTERVAL=2.0
